<main>
    <div class="main-content wide-content">
        <div class="text-center set-header">
            <h1>Contact us</h1>
        </div>

        <div class="container contacts-container">
            <div class="row">
                <div class="col-xs-6 contacts-left wow bounceInLeft">
                    <div class="contact-box">
                        <div class="contact-icon contact-icon-1"></div>
                        <span>OUR E-MAIL:</span>
                        <a href="mailto:support@cryptopatriots.com">support@cryptopatriots.com</a>
                        <a href="mailto:support@cryptopatriots.com">support@cryptopatriots.com</a>
                    </div>
                    <div class="contact-box">
                        <div class="contact-icon contact-icon-2"></div>
                        <span>COMPANY ADDRESS:</span>
                        <address>18 King William Street,  London, EC4N 7BP, UK</address>
                    </div>
                    <div class="contact-box">
                        <div class="contact-icon contact-icon-3"></div>
                        <span>PHONE NUMBERs:</span>
                        <a href="tel:+442074425500" class="contacts-phone">+44 207 442 55 00</a>,
                        <a href="tel:+442074425500" class="contacts-phone">+44 207 442 55 00</a>
                    </div>
                </div>
                <div class="col-xs-6 contacts-right wow bounceInRight">
                    <form action="#" method="post" class="contact_form" id="contact_form">
                        <fieldset>
                            <div class="row">
                                <div class="input_box">
                                    <input type="text" class="input-sm" placeholder="Your Name" name="contacts_name">
                                </div>
                                <div class="input_box">
                                    <input type="text" class="input-sm" placeholder="Your e-Mail" name="contacts_email">
                                </div>
                                <div class="input_box textarea_box">
                                    <textarea rows="10" cols="10" class="input-sm textarea" placeholder="Your Message" name="contacts_message"></textarea>
                                </div>
                            </div>
                            <div class="btn-group-5">
                                <button type="submit" class="btn-default btn-big btn-blue">Send</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>
</main>